{
  "name": "travel-and-help",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "start": "npm-run-all start:front start:back",
    "watch": "npm-run-all -p watch:*",
    "build": "webpack --config webpack/index.js",
    "test": "npm-run-all test:front test:back",
    "coverage": "nyc npm test",
    "codecov": "nyc report | codecov",
    "lint": "eslint src",
    "migration": "mm",

    "start:back": "cd src/back && nodemon",
    "start:front": "npm run build",

    "watch:front": "webpack-dev-server --config webpack/index.js",
    "watch:back": "npm run start:back",
    "watch:db": "mongod --dbpath .local-db",

    "test:unit": "npm-run-all test:front test:back",
    "test:front": "mocha test/unit/front --compilers js:babel-register",
    "test:back": "mocha test/unit/back",
    "test:e2e": "protractor protractor.conf.js",
    "test:ci": "npm-run-all -s lint coverage codecov",

    "lint:front": "eslint src/front",
    "lint:back": "eslint src/back",

    "cordova:build": "cordova build",
    "cordova:emulate": "cordova emulate",
    "precordova:build": "PLATFORM=cordova npm run build && cordova prepare"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/travel-and-help/start-kit.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/travel-and-help/start-kit/issues"
  },
  "homepage": "https://github.com/travel-and-help/start-kit#readme",
  "devDependencies": {
    "autoprefixer": "^6.3.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.7.2",
    "base64-font-loader": "0.0.3",
    "chai": "^3.5.0",
    "chalk": "^1.1.1",
    "codecov": "^1.0.1",
    "cordova": "^6.1.1",
    "css-loader": "^0.23.1",
    "csscomb-loader": "0.0.2",
    "deep-freeze": "0.0.1",
    "dotenv": "^2.0.0",
    "eslint": "^2.4.0",
    "eslint-config-airbnb": "^6.1.0",
    "eslint-plugin-react": "^4.2.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "getenv": "^0.6.0",
    "glob": "^7.0.3",
    "html-webpack-plugin": "^2.14.0",
    "import-glob-loader": "^1.1.0",
    "mocha": "^2.4.5",
    "mongodb-migrations": "^0.5.1",
    "node-sass": "^3.4.2",
    "nodemon": "^1.9.1",
    "npm-run-all": "^1.5.3",
    "nyc": "^6.1.1",
    "postcss-loader": "^0.8.2",
    "protractor": "^3.2.2",
    "proxyquire": "^1.7.4",
    "raw-loader": "^0.5.1",
    "react-hot-loader": "^1.3.0",
    "sass-loader": "^3.2.0",
    "sinon": "^1.17.3",
    "sinon-as-promised": "^4.0.0",
    "sinon-chai": "^2.8.0",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "engines": {
    "node": "^5.8.0",
    "npm": "^3.8.1"
  },
  "nyc": {
    "reporter": "lcov",
    "report-dir": "reports/coverage",
    "exclude": [
      "**/*.spec.js",
      "test/",
      "webpack/",
      "env/",
      "reports/",
      "target/"
    ],
    "lines": 89,
    "check-coverage": true
  },
  "dependencies": {
    "body-parser": "^1.15.0",
    "cors": "^2.7.1",
    "express": "^4.13.4",
    "mongoose": "^4.4.10",
    "normalize.css": "^4.0.0",
    "q": "^1.4.1",
    "react": "^0.14.7",
    "react-dom": "^0.14.8",
    "react-redux": "^4.4.1",
    "react-router": "^2.0.1",
    "react-router-redux": "^4.0.1",
    "redux": "^3.3.1",
    "redux-thunk": "^2.0.1"
  }
}
