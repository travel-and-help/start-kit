{
  "env": {
    "browser": true, //since we use JSDOM in .spec
    "mocha": true
  },
  "globals": {
    "env": true,
    "sinon": true,
    "should": true
  },
  "rules": {
    "no-use-before-define": 0,
    "comma-dangle": 0,
    "one-var": 0,
    "padded-blocks": 0,
    "indent": [
      2,
      4
    ]
  }
}